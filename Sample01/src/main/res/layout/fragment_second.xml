<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onBoard.SecondFragment">


    <ImageView
        android:layout_width="261.1dp"
        android:layout_height="212.11dp"
        android:id="@+id/instantPayImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="69.22dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="339dp"
        android:src="@drawable/cashbackpg"
        />

    <TextView
        android:id="@+id/middleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/instantPayImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="131dp"
        android:text="Cashback"
        android:textColor="#303030"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="@string/lorem"
        app:layout_constraintTop_toBottomOf="@+id/middleText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="#011024"
        android:lineSpacingExtra="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>