<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onBoard.FirstFragment">


    <ImageView
        android:id="@+id/instantPayImage"
        android:layout_width="322.1dp"
        android:layout_height="217.11dp"
        android:layout_marginStart="26.77dp"
        android:layout_marginTop="110.13dp"
        android:layout_marginEnd="26.02dp"
        android:layout_marginBottom="339dp"
        android:src="@drawable/instantpaymentpg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/middleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="91dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="Instant Payment"
        android:textColor="#303030"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instantPayImage" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:text="@string/lorem"
        android:textColor="#011024"
        android:textSize="12sp"
        android:lineSpacingExtra="8dp"
        app:layout_constraintTop_toBottomOf="@+id/middleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>