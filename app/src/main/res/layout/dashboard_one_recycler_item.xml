<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/cashBackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/green"
        android:text=""
        android:textSize="8sp"
        android:fontFamily="@font/quicksand_medium"
        app:layout_constraintBottom_toTopOf="@id/dashboardItemLogo"
        android:layout_marginBottom="@dimen/dimen_4"
        />

    <ImageView
        android:id="@+id/dashboardItemLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/dashBoardItemName"
        android:layout_marginBottom="@dimen/dimen_8"
        android:src="@drawable/send_money"
        android:padding="@dimen/dimen_12"
        app:layout_constraintDimensionRatio="1:1"
        />

    <TextView
        android:id="@+id/dashBoardItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:text="logoServiceName"
        android:textColor="@color/bold_text_color"
        android:textSize="11sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"

         />

</androidx.constraintlayout.widget.ConstraintLayout>