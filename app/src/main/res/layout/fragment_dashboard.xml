<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewOne"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/custom_background"
            app:layout_constraintBottom_toBottomOf="@id/middleView"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/middleView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/walletPriceInfo"
            app:layout_constraintTop_toTopOf="@id/walletPriceInfo"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_48"
            android:fontFamily="@font/quicksand_medium"
            android:text="welcome,"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/name_lastname"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeText" />

        <ImageView
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:src="@drawable/notification"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/profileImage"
            app:layout_constraintBottom_toBottomOf="@id/profileImage"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_48"
            android:padding="@dimen/dimen_8"
            android:background="@drawable/icon_back_ground"

            />
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:id="@+id/profileImage"
            app:shapeAppearanceOverlay="@style/imageViewRounded"
            android:src="@drawable/cashbackpg"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_48"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_16"
            />

        <include
            android:id="@+id/walletPriceInfo"
            layout="@layout/dashboard_priceinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userName"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_32"
            android:layout_marginEnd="@dimen/dimen_16"
             />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/walletPriceInfo"
            android:layout_marginTop="@dimen/dimen_24"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_8">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="@dimen/dimen_16"

                    />




                <TextView
                    android:id="@+id/tapToKyc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/tap_to_fill_kyc"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    app:layout_constraintTop_toBottomOf="@id/tapToKyc"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/quicksand_bold"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    android:text="@string/complete_kyc"
                    android:textSize="11sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/servicesHorizontalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:paddingStart="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cardView" >

           <LinearLayout
               android:id="@+id/sendMoney"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_marginEnd="@dimen/dimen_16"
               android:gravity="center"
               >
               <androidx.appcompat.widget.AppCompatImageView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/send_money"
                   android:paddingTop="@dimen/dimen_16"
                   android:paddingBottom="@dimen/dimen_16"
                   android:paddingStart="@dimen/dimen_12"
                   android:paddingEnd="@dimen/dimen_12"
                   android:background="@drawable/icon_back_ground"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/send_money"
                   android:fontFamily="@font/quicksand_medium"
                   android:textColor="@color/bold_text_color"
                   android:textSize="11sp"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/dimen_8"
                   />
           </LinearLayout>


            <LinearLayout
                android:id="@+id/requestMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_16"
                android:gravity="center"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/request_money"
                    android:paddingTop="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_12"
                    android:background="@drawable/icon_back_ground"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_money"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/bold_text_color"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen_8"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/load_wallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_16"
                android:gravity="center"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/load_wallet"
                    android:paddingTop="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_12"
                    android:background="@drawable/icon_back_ground"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/load_wallet"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/bold_text_color"
                    android:textSize="11sp"
                    android:layout_marginTop="@dimen/dimen_8"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bankTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bank_transfer_01"
                    android:paddingTop="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_12"
                    android:background="@drawable/icon_back_ground"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Transfer"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/bold_text_color"
                    android:textSize="11sp"
                    android:layout_marginTop="@dimen/dimen_8"
                    />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/utilitiesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilities"
            app:layout_constraintTop_toBottomOf="@+id/servicesHorizontalLayout"
            android:textSize="14sp"
            android:textColor="@color/bold_text_color"
            android:layout_marginTop="@dimen/dimen_24"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_16"
            android:fontFamily="@font/quicksand_bold"
            />

        <LinearLayout
            android:id="@+id/utilitiesServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/utilitiesTextView"
            android:layout_marginTop="@dimen/dimen_24"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstRowServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24"
                android:paddingStart="@dimen/dimen_16"
                android:paddingEnd="@dimen/dimen_16"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/cardView" >

                <LinearLayout
                    android:id="@+id/topUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_32"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/top__up"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/top_up_background"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Up"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/landLine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_32"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/landline"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/landline_background"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Land Line"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/electricity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_32"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/electricity"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/electricitybackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electricity"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/internet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/internet"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/internetbackground"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internet"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondRowServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24"
                android:paddingStart="@dimen/dimen_16"
                android:paddingEnd="@dimen/dimen_16"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/cardView" >

                <LinearLayout
                    android:id="@+id/water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_32"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/water"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/waterbackground"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_32"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/tvbackground"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TV"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_32"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/datapack"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/datapackbackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Pack"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        android:paddingTop="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_16"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingEnd="@dimen/dimen_12"
                        android:background="@drawable/morebackground"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/bold_text_color"
                        android:textSize="11sp"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/offersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/utilitiesServices"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:gravity="center"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/offers"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="14sp"
                android:textColor="@color/bold_text_color"
                android:layout_weight="1"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:textSize="11sp"
                android:textColor="@color/button_purple"
                android:layout_marginEnd="4dp"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_forward_24"
                />
        </LinearLayout>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/offersLayout"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_24"
            >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mountain"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dimen_24"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/food"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </HorizontalScrollView>



        <LinearLayout
            android:id="@+id/merchantLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_16"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dimen_16"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Merchant"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="14sp"
                android:textColor="@color/bold_text_color"
                android:layout_weight="1"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:textSize="11sp"
                android:textColor="@color/button_purple"
                android:layout_marginEnd="4dp"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_forward_24"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/merchantServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/merchantLayout"
            android:layout_marginTop="@dimen/dimen_24"
            android:paddingStart="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_32"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/water"
                    android:paddingTop="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_12"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/bold_text_color"
                    android:textSize="11sp"
                    android:layout_marginTop="@dimen/dimen_8"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_32"
                android:gravity="center"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tv"
                    android:paddingTop="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dimen_12"
                    android:background="@drawable/tvbackground"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/bold_text_color"
                    android:textSize="11sp"
                    android:layout_marginTop="@dimen/dimen_8"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_32"
                android:gravity="center"
                >
                <androidx.appcompat.widget.AppCompatImageView
