<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dashboard_two.DashboardTwoHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_48"
            android:layout_marginTop="@dimen/dimen_110"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/npr_xxxx"
            android:textColor="@color/bold_text_color"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/walletAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/black_amount_wallet"
            app:layout_constraintBottom_toBottomOf="@id/balanceText"
            app:layout_constraintStart_toStartOf="@id/amount"
            app:layout_constraintTop_toTopOf="@id/balanceText" />

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_8"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/balance"
            android:textColor="@color/bold_text_color"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/walletAmount"
            app:layout_constraintTop_toBottomOf="@id/amount" />

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_110"
            android:layout_marginEnd="@dimen/dimen_48"
            android:fontFamily="@font/quicksand_bold"
            android:text="XX.X"
            android:textColor="@color/bold_text_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/walletPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8"
            android:src="@drawable/wallet_point"
            app:layout_constraintBottom_toBottomOf="@id/walletPointText"
            app:layout_constraintEnd_toStartOf="@id/walletPointText"
            app:layout_constraintTop_toTopOf="@id/walletPointText" />

        <TextView
            android:id="@+id/walletPointText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:fontFamily="@font/quicksand_medium"
            android:text="Wallet Point"
            android:textColor="@color/bold_text_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/point"
            app:layout_constraintTop_toBottomOf="@id/point" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:backgroundTint="@color/card_bgc"
            app:layout_constraintTop_toBottomOf="@id/balanceText">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8"
                android:paddingBottom="@dimen/dimen_8">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:src="@drawable/close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />


                <TextView
                    android:id="@+id/tapToKyc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    android:text="@string/tap_to_fill_kyc"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:fontFamily="@font/quicksand_bold"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    android:text="@string/complete_kyc"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tapToKyc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/servicesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            app:layout_constraintTop_toBottomOf="@id/cardView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mountainImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:src="@drawable/mountain"
            app:layout_constraintTop_toBottomOf="@id/servicesRecyclerView" />

        <HorizontalScrollView
            android:id="@+id/chipsScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_24"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mountainImage">

            <LinearLayout
                android:paddingEnd="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/chips_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/bill_payments"
                        android:textColor="@color/bold_text_color"
                        android:textSize="12sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/chips_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/bookings"
                        android:textColor="@color/bold_text_color"
                        android:textSize="12sp" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/chips_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/free_payment"
                        android:textColor="@color/bold_text_color"
                        android:textSize="12sp" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/chips_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="Bill Payments"
                        android:textColor="@color/bold_text_color"
                        android:textSize="12sp" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/utilitiesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            app:layout_constraintTop_toBottomOf="@id/chipsScrollView"/>


        <HorizontalScrollView
            android:id="@+id/chipsScrollViewSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_24"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/utilitiesRecyclerView">

            <LinearLayout
                android:paddingEnd="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/chips_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/merchant"
                        android:textColor="@color/bold_text_color"
                        android:textSize="12sp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/chips_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/food"
                        android:textColor="@color/bold_text_color"
                        android:textSize="12sp" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_12"
                    android:elevation="@dimen/dimen_16"
                    app:cardCornerRadius="@dimen/dimen_12"
                    app:strokeColor="@color/chips_border"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:fontFamily="@font/quicksand_medium"
                        android:text="@string/subscriptions"
                        android:textColor="@color/bold_text_color"
                        android:textSize="12sp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </HorizontalScrollView>

         <androidx.recyclerview.widget.RecyclerView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/merchantsRecyclerView"
             app:layout_constraintTop_toBottomOf="@id/chipsScrollViewSecond"
             android:layout_marginTop="@dimen/dimen_24"
             android:paddingBottom="@dimen/dimen_24"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>